# パッケージをインストールする際にバージョンを厳密に保存する
save-exact=true

# パッケージマネージャーとしてpnpmを使用する
package-manager=pnpm

# ピア依存関係を自動でインストールする
auto-install-peers=true

# アップデート通知を無効にする
update-notifier=false

# 厳格なSSL接続を使用する
strict-ssl=true

# レジストリの設定（npm公式レジストリを使用）
registry=https://registry.npmjs.org/

# 進捗表示の設定（インストール時に進捗を表示する）
progress=true
