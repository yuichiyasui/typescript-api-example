{
  "name": "@typescript-api-example/hono-api",
  "version": "1.0.0",
  "description": "Hono API application",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/infrastructure/server.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:inspect": "eslint --inspect-config",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "1.14.4",
    "@hono/swagger-ui": "0.5.2",
    "@hono/zod-openapi": "0.19.9",
    "@libsql/client": "0.15.9",
    "bcrypt": "6.0.0",
    "drizzle-orm": "0.44.2",
    "hono": "4.8.2",
    "nanoid": "5.1.5",
    "pino": "9.7.0",
    "pino-pretty": "13.0.0",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/node": "22.2.0",
    "@typescript-api-example/eslint-config": "workspace:*",
    "@typescript-api-example/tsconfig": "workspace:*",
    "@vitest/ui": "3.2.4",
    "drizzle-kit": "0.31.2",
    "eslint": "9.29.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=22.16.0"
  }
}
